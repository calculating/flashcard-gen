{
  "manifest_version": 2,

  "name": "Flashcard Gen",

  "version": "0.1",

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "flashcard."
  },

  "background": {
  "scripts": ["background.js"],
  "persistent": false
  },

  "commands": {
    "toggle-add-words": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "Toggle: add words"
    }
  }

}
